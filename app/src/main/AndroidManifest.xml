<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.altu.greedygame">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.altu.greedygame.NewsBreezeApp"
        android:allowBackup="true"
        android:icon="@drawable/gg"
        android:label="@string/app_name"
        android:roundIcon="@drawable/gg"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsBreeze">
        <activity android:name="com.altu.greedygame.ui.home.SplashActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.altu.greedygame.ui.saved_news.SavedNews"
            android:exported="false" />
        <activity
            android:name="com.altu.greedygame.ui.news_detail.NewsDetail"
            android:exported="false" />
        <activity
            android:name="com.altu.greedygame.ui.home.HomeActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>